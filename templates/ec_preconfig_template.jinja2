      cost: {{ data['ospf_interface_2_cost'] | default ("1",true) }}
      priority: {{ data['ospf_interface_2_priority'] | default ("1",true) }}
      adminStatus: Up
      helloInterval: 10
      deadInterval: 40
      transmitDelay: 1
      retransmitInterval: 4
      authentication: None
      authenticationKey:
      md5Key: 0
      md5Password:
      comment: {{ data['ospf_interface_2_comment'] | default ("",false) }}
    {%+ endif -%}

{% endif %}