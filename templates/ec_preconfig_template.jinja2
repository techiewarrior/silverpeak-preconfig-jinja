{%+ if data['wan_interface_1_name'] is defined and data['wan_interface_1_name'] != "" %}
    - interfaceName: {{ data['wan_interface_1_name'] }}
      interfaceType: wan
      interfaceComment: {{ data['wan_interface_1_desc'] | default("",false) }}
