      advertiseToBgp: {{ data['static_route_2_advertiseToBgp'] | default ("false",true) }}
      advertiseToOspf: {{ data['static_route_2_advertiseToOspf'] | default ("false",true) }}
      tag: {{ data['static_route_2_tag'] | default ("ANY",true) }}
      comment: {{ data['static_route_2_comment'] | default ("",false) }}
    {%+ endif %}


ecLicensing:

  useDefaultAccount: {{ data['useDefaultAccount'] | default ("true", true) }}
  bandwidthLevel: {{ data['license_bandwidth'] | default ("10000", true) }}
  boost: {{ data['license_boost'] | default ("0", true) }}

{% if data['silverpeak_bgp_asn'] is defined and data['silverpeak_bgp_asn'] != "" %}
bgpSystemConfig:
  enable: true
  asn: {{ data['silverpeak_bgp_asn'] }}
  routerId: {{ data['silverpeak_routerId'] }}
  enableGracefulRestart: false
  maxRestartTime: 120
  maxStalePathTime: 150
  redistToSilverPeak: true
  propagateAsPath: true
  redistOspfToBgp: false
  filterTag: 0

  neighbors:
    {%- if data['bgp_peer1_ip'] is defined and data['bgp_peer1_ip'] != "" %}
    - peerIpAddress: {{ data['bgp_peer1_ip'] }}
      enableImports: true
      peerAsn: {{ data['bgp_peer1_asn'] }}
      peerType: Branch
      enableNeighbor: true
      nextHopSelf: false
      inboundRouteMap : {{ data['bgp_peer1_inboundRouteMap'] | default ("default_rtmap_bgp_inbound_br",true) }}
      outboundRouteMap : {{ data['bgp_peer1_outboundRouteMap'] | default ("default_rtmap_bgp_outbound_br",true) }}
      keepAlive: 30
      holdTime: 90
      password:
    {%+ endif -%}
    {%- if data['bgp_peer2_ip'] is defined and data['bgp_peer2_ip'] != "" %}
    - peerIpAddress: {{ data['bgp_peer2_ip'] }}
      enableImports: true
      peerAsn: {{ data['bgp_peer2_asn'] }}
      peerType: Branch
      enableNeighbor: true
      nextHopSelf: false
      inboundRouteMap : {{ data['bgp_peer2_inboundRouteMap'] | default ("default_rtmap_bgp_inbound_br",true) }}
      outboundRouteMap : {{ data['bgp_peer2_outboundRouteMap'] | default ("default_rtmap_bgp_outbound_br",true) }}
      keepAlive: 30
      holdTime: 90
      password:
    {%+ endif -%}

{% endif %}


{% if data['enable_ospf'] is defined and data['enable_ospf'] == 'TRUE' %}
ospfSystemConfig:
  enable: true
  routerId: {{ data['silverpeak_routerId'] | default ("",false) }}
  redistMapToOspf: {{ data['redistMapToOspf'] | default ("default_rtmap_to_ospf",false) }}
  interfaces:
    {%- if data['ospf_interface_1_name'] != "" %}
    - interfaceName: {{ data['ospf_interface_1_name'] }}
      areaId: {{ data['ospf_area'] }}
      cost: {{ data['ospf_interface_1_cost'] | default ("1",true) }}
      priority: {{ data['ospf_interface_1_priority'] | default ("1",true) }}
      adminStatus: Up
      helloInterval: 10
      deadInterval: 40
      transmitDelay: 1
      retransmitInterval: 4
      authentication: None
      authenticationKey:
      md5Key: 0
      md5Password:
      comment: {{ data['ospf_interface_1_comment'] | default ("",false) }}
    {%+ endif -%}
